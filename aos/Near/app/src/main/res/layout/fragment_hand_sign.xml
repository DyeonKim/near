<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/temp_gray_light"
        tools:context=".src.main.handsign.HandSignFragment">

        <View
            android:id="@+id/view2"
            android:layout_width="50dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/radioGroup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/radioGroup" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_margin_default"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/activity_margin_default"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/rb_all_hand_sign"
                style="@style/body_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_button_green"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="전체 수어"
                android:textColor="@drawable/selector_radio_text_green" />

            <RadioButton
                android:id="@+id/rb_my_note"
                style="@style/body_text"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/selector_radio_button_green"
                android:button="@null"
                android:gravity="center"
                android:text="내 단어장"
                android:textColor="@drawable/selector_radio_text_green" />
        </RadioGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_hand_sign"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/activity_margin_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>