<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".src.main.mypage.MyPageFragment">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="@dimen/activity_margin_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_app_bar"
            app:srcCompat="@drawable/img_temp_mascot" />

        <TextView
            android:id="@+id/tv_app_bar"
            style="@style/appbar_text"
            android:layout_margin="@dimen/activity_margin_default"
            android:text="마이페이지"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            style="@style/header_text"
            android:id="@+id/tv_nick_name"
            android:text="닉네임"
            android:layout_margin="@dimen/activity_margin_default"
            app:layout_constraintBottom_toBottomOf="@+id/iv_profile"
            app:layout_constraintStart_toEndOf="@+id/iv_profile"
            app:layout_constraintTop_toTopOf="@+id/iv_profile" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그인"
            android:layout_margin="@dimen/activity_margin_default"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/iv_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_profile" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로그아웃"
            android:layout_margin="@dimen/activity_margin_default"
            app:layout_constraintBottom_toBottomOf="@+id/iv_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_profile" />

        <View
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/gray_low_emphasis"
            android:layout_marginTop="@dimen/activity_margin_default"
            app:layout_constraintTop_toBottomOf="@+id/iv_profile"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/guideline">

            <TextView
                style="@style/body_text"
                android:id="@+id/tv_member_modify"
                android:layout_width="match_parent"
                android:text="회원 정보 수정"
                android:padding="@dimen/activity_margin_default"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/gray_low_emphasis"/>

            <TextView
                style="@style/body_text"
                android:id="@+id/tv_setting"
                android:layout_width="match_parent"
                android:text="설정"
                android:padding="@dimen/activity_margin_default"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:background="@color/gray_low_emphasis"/>

            <TextView
                style="@style/body_text"
                android:id="@+id/tv_my_note"
                android:layout_width="match_parent"
                android:text="내 단어장"
                android:padding="@dimen/activity_margin_default"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>